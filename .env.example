# Database (connects to Docker postgres container)
# Note: Docker maps 5433 (host) -> 5432 (container)
DB_HOST=localhost
DB_PORT=5433
DB_USERNAME=wupaq
DB_PASSWORD=wupaq_password
DB_NAME=wupaq_db

# App
PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-in-production
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Callback URL to register: http://localhost:3001/auth/google/callback
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/auth/google/callback

# Apple Sign In
# Get credentials from: https://developer.apple.com/account/resources/identifiers/list/serviceId
# Callback URL to register: http://localhost:3001/auth/apple/callback
APPLE_CLIENT_ID=com.yourcompany.yourapp
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLE_PRIVATE_KEY_PATH=./keys/AuthKey.p8
APPLE_CALLBACK_URL=http://localhost:3001/auth/apple/callback

# =============================================================================
# CARRIER INTEGRATIONS
# =============================================================================

# Estafeta
ESTAFETA_API_KEY=placeholder_key
ESTAFETA_API_SECRET=placeholder_secret
ESTAFETA_SANDBOX=true
ESTAFETA_BASE_URL=https://api-sandbox.estafeta.com/v1

# PAC (Facturama for CFDI timbrado)
PAC_USERNAME=your_facturama_username
PAC_PASSWORD=your_facturama_password
PAC_SANDBOX=true

# FedEx
FEDEX_API_KEY=your_fedex_api_key
FEDEX_API_SECRET=your_fedex_api_secret
FEDEX_ACCOUNT_NUMBER=your_fedex_account_number
FEDEX_SANDBOX=true


# Environment
NODE_ENV=development
USE_MOCK_RATES=true
